---
import projects from "../data/projects.json";
import {Picture} from 'astro:assets';
---

<section class="py-12 bg-gray-900 text-white text-center" id="projects">
    <h2 class="text-3xl font-bold mb-6">Featured Projects</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 px-6">
        {projects.map((project) => (
            <a href={`/projects/${project.slug}`} class="bg-gray-800 rounded-lg shadow-md p-6 hover:bg-gray-700 transition-colors duration-300">
                <Picture
                        src={project.image}
                        alt={project.title}
                        width="600"
                        height="400"
                        formats={['avif', 'webp']}
                        class="w-full h-40 object-cover rounded-md mb-4" />
                <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
                <p class="text-gray-400">{project.description}</p>
                <div class="flex flex-wrap gap-2 justify-center mt-3">
                    {project.tech.languages.map((tech) => (
                            <span class="bg-blue-600 px-2 py-1 text-sm rounded">{tech}</span>
                    ))}
                </div>
            </a>
        ))}
    </div>
</section>
