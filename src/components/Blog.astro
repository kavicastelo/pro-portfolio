---
import { getCollection } from "astro:content";

const posts = await getCollection("blog", ({ data }) => !data.draft);
---

<section class="py-12 bg-gray-900 text-white text-center" id="blog">
    <h2 class="text-3xl font-bold mb-6">Blog Posts</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 px-6">
        {posts.map((post) => (
                <a href={`/blog/${post.slug}`} class="block p-6 bg-gray-800 rounded-lg shadow-lg hover:scale-105 transition-all">
                    <h2 class="text-xl font-bold text-white mb-2">{post.data.title}</h2>
                    <p class="text-gray-400 text-sm mb-2">{post.data.date.toDateString()}</p>
                    <p class="text-gray-300 line-clamp-3">{post.data.description}</p>
                    <span class="text-blue-400 text-sm mt-2 inline-block">Read More â†’</span>
                </a>
        ))}
    </div>
</section>
