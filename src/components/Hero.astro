---
import { Picture } from 'astro:assets';
import profile from '../assets/images/profile.jpg';
---
<section class="flex flex-col items-center justify-center min-h-screen bg-gray-900 text-white text-center p-6">
    <Picture
            src={profile}
            formats={['avif', 'webp']}
            alt="Kavi Castelo"
            class="w-40 h-40 rounded-full border-4 border-gray-700 shadow-lg"
            loading="eager"
    />
    <h1 class="text-4xl font-bold mt-4">Kavi Castelo</h1>
    <h2 class="text-xl text-gray-400 mt-2 fade-in">Engineering the Future | Leading with Code & Innovation.</h2>
    <p class="mt-4 text-gray-300 max-w-xl">
        Passionate Software Engineer & Tech Leader, building cutting-edge solutions with innovation and precision.
    </p>
    <a
            href="#projects"
            class="mt-6 px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg shadow-md transition-all hover:shadow-blue-500/50 hover:scale-105"
    >
        Explore My Work
    </a>
    <style>
        .fade-in {
            opacity: 0;
            animation: fadeIn 1.5s ease-in-out forwards;
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
</section>
